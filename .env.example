# Environment Configuration
NODE_ENV="dev" # Options: dev, test, production

# Server Configuration
# BASE_URL="" # Base path for reverse proxy (e.g., "/tracktor" for https://example.com/tracktor/)

# Database Configuration
DB_PATH="./tracktor.db"

# File Upload Configuration
UPLOADS_DIR="./uploads"

# Application Features
TRACKTOR_DEMO_MODE=false
FORCE_DATA_SEED=false
TRACKTOR_DISABLE_AUTH=false

# Cron Jobs Configuration
ENABLE_CRON_JOBS=true # Enable/disable automated notification generation

# CORS Configuration
CORS_ORIGINS="*"

# Logging Configuration
LOG_REQUESTS=true
LOG_LEVEL="info"
LOG_DIR="./logs"

# File upload limit
BODY_SIZE_LIMIT="10mb"

# Security Configuration
APP_SECRET="" # Secret key for encrypting sensitive data (generate with: openssl rand -hex 32)