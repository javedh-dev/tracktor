{
  "name": "tracktor",
  "private": true,
  "type": "module",
  "workspaces": [
    "./app/frontend",
    "./app/backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=@tracktor/backend\" \"npm run dev --workspace=@tracktor/frontend\"",
    "build": "./scripts/build.sh",
    "start": "./build/start.sh",
    "format": "npm run format --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "check": "npm run check --workspaces --if-present",
    "clean": "./scripts/clean.sh",
    "reset": "rm -rf node_modules && npm run reset --workspaces --if-present",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  }
}
