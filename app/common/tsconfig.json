{
  "compilerOptions": {
    "target": "esnext",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node10",
    "module": "esnext",
    "noUncheckedIndexedAccess": true,
    "declaration": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "./dist"]
}
