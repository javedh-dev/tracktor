{
  "name": "@tracktor/backend",
  "version": "0.0.1",
  "description": "Tracktor backend",
  "main": "dist/index.js",
  "type": "module",
  "author": "Javed Hussain",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV='dev' tsx --watch index.ts",
    "build": "NODE_ENV='prod' tsc && tsc-alias && tsc-esm-fix ./build/",
    "start": "NODE_ENV='prod' node build/index.js",
    "db:generate": "NODE_OPTIONS='--import tsx' drizzle-kit generate --custom --name",
    "db:migrate": "NODE_OPTIONS='--import tsx' NODE_ENV='prod' drizzle-kit migrate --config=drizzle.config.js",
    "db:migrate:dev": "NODE_OPTIONS='--import tsx' NODE_ENV='dev' drizzle-kit migrate --config=drizzle.config.js",
    "db:migrate:test": "NODE_OPTIONS='--import tsx' NODE_ENV='test' drizzle-kit migrate --config=drizzle.config.js",
    "format": "(eslint --fix . || true) && prettier --write .",
    "lint": "eslint . && prettier --check .",
    "clean": "rm -rf build *.db uploads logs",
    "reset": "npm run clean && rm -rf tracktor.db tracktor-test.db node_modules && npm install",
    "test": "npm run db:migrate:test && jest  --passWithNoTests"
  },
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@libsql/client": "^0.15.15",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "multer": "^2.0.2",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.6.2",
    "@types/sqlite3": "^5.1.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unused-imports": "^4.2.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "tsc-alias": "^1.8.16",
    "tsc-esm-fix": "^3.1.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
